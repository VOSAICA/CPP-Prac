{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-Wall",
                "-D",
                "NDEBUG"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated for publish.",
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build active debug file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-Wall",
                "-D",
                "_DEBUG"
            ],
            "options": {},
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Task generated for debug."
        },
        {
            "type": "process",
            "label": "Build then run",
            "dependsOn": "Build active file",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "presentation": {
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
